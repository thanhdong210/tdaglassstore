<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="products_template">
        <t t-call="website.layout">
          <form role="form" action="/products" method="POST">
            <label for="cars">Sắp xếp theo:</label>
            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
            <select type="hidden" name="sort_price" t-att-value="sort_price" id="sort_price">
                <option value="selling">Bán chạy nhất</option>
                <option value="low_to_high">Giá từ thấp đến cao</option>
                <option value="high_to_low">Giá từ cao đến thấp</option>
            </select>
            
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
          <div class="row o_hr_body">
            <t t-foreach="products" t-as="product">
              <div class="col-md-3 col-sm-4">
                <div class="product-card">
                		<div class="badge">Hot</div>
                		<div class="product-tumb">
                			<img class="align-self-center rounded-circle mr-3 hrms_image" alt="" t-attf-src="/web/image?model=product.product&amp;field=image_1920&amp;id=#{product.id}"/>
                		</div>
                		<div class="product-details">
                			<span class="product-catagory">Women,bag</span>
                			<h4><a t-attf-href="/product_detail/#{product.id}"><span t-field="product.name"/></a></h4>
                			<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Vero, possimus nostrum!</p>
                			<div class="product-bottom-details">
                				<div class="product-price"><small><span t-field="product.list_price"/></small>$230.99</div>
                				<div class="product-links">
                					<a href=""><i class="fa fa-heart"/></a>
                					<a href=""><i class="fa fa-shopping-cart"/></a>
                				</div>
                			</div>
                		</div>
                	</div>
              </div>
            </t>
          </div>
        </t>
          

        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/tda_glass_merchant/static/src/css/product_css.css"/>
            <link rel="stylesheet" href="/tda_glass_merchant/static/src/css/dashboard_css.css"/>
        </xpath>
    </template>

    <template id="product_detail_template">
        <t t-call="website.layout">
          <div class="small-container single-product">
            <div class="row">
              <div class="col-2">
                <div class="project">
                  <img width="100%" alt="" t-attf-src="/web/image?model=product.product&amp;field=image_1920&amp;id=#{product.id}"/>
                </div>
                
                <div class="small-img-row">
                  <div class="small-img-col">
                    <img width="100%" class="small-img" alt="" t-attf-src="/web/image?model=product.product&amp;field=image_1920&amp;id=#{product.id}"/>
                  </div>
                  
                  <div class="small-img-col">
                    <img width="100%" class="small-img" alt="" t-attf-src="/web/image?model=product.product&amp;field=image_1920&amp;id=#{product.id}"/>
                  </div>
                  
                  <div class="small-img-col">
                    <img width="100%" class="small-img" alt="" t-attf-src="/web/image?model=product.product&amp;field=image_1920&amp;id=#{product.id}"/>
                  </div>
                  
                  <div class="small-img-col">
                    <img width="100%" class="small-img" alt="" t-attf-src="/web/image?model=product.product&amp;field=image_1920&amp;id=#{product.id}"/>
                  </div>
                </div>
              </div>
              
              <div class="popup-img">
                <span>close</span>
                <img alt="" t-attf-src="/web/image?model=product.product&amp;field=image_1920&amp;id=#{product.id}"/>
              </div>
              
              <div class="col-2">
                <p><span t-field="product.categ_id"/></p>
                <h1><span t-field="product.name"/></h1>
                <h4><span t-field="product.lst_price"/></h4>
              </div>
            </div>
          </div>
          
          <script>
            if (document) {
              document.querySelectorAll('.col-2 img').forEach(image => {
                image.onclick = () => {
                  document.querySelector('.popup-img').style.display = 'block';
                  document.querySelector('.popup-img img').src = image.getAttribute('src');
                }
              })
              
              document.querySelector('.popup-img span').onclick = () => {
                document.querySelector('.popup-img').style.display = 'none';
              }
            }
          </script>
        </t>
          

        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/tda_glass_merchant/static/src/css/product_detail_css.css"/>
        </xpath>
    </template>
</odoo>