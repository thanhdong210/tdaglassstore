<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tda_info_form" model="ir.ui.view">
        <field name="name">tda_info_form</field>
        <field name="model">tda.info</field>
        <field name="arch" type="xml">
            <form string="Company info">
                <sheet>
                    <group name="Info" string="Company info">
                        <group>
                            <field name="name" string="Name"/>
                            <field name="phone1" string="Phone 1"/>
                            <field name="phone2" string="Phone 2"/>
                        </group>
                        <group>
                            <field name="tax_code" string="Tax code"/>
                            <field name="email" string="Email"/>
                            <field name="address_ids" string="Address" widget="many2many_tags"/>
                        </group>
                    </group>

                    <group name="working_time" string="Working time">
                        <field name="working_time_ids" string="Working time">
                            <tree>
                                <field name="weekday" string="Weekday"/>
                                <field name="time_from" string="Time from" widget="timepicker"/>
                                <field name="time_to" string="Time to" widget="timepicker"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tda_info_tree" model="ir.ui.view">
        <field name="name">tda_info_tree</field>
        <field name="model">tda.info</field>
        <field name="arch" type="xml">
            <tree string="Company info">
                <field name="name" string="Name"/>
            </tree>
        </field>
    </record>

    <record id="tda_info_action" model="ir.actions.act_window">
        <field name="name">Company info</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tda.info</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>