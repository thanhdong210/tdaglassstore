<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tda_product_image_form" model="ir.ui.view">
        <field name="name">view_tda_product_image_form</field>
        <field name="model">tda.product.image</field>
        <field name="arch" type="xml">
            <form string="Product Images">
                <field name="sequence" invisible="1"/>
                <div class="row o_website_sale_image_modal">
                    <div class="col-xl-12 text-center o_website_sale_image_modal_container">
                        <div class="row">
                            <div class="col">
                                <field name="image_1920" widget="image"/>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </field>
    </record>

    <record id="view_tda_product_image_kanban" model="ir.ui.view">
        <field name="name">view_tda_product_image_kanban</field>
        <field name="model">tda.product.image</field>
        <field name="arch" type="xml">
            <kanban string="Product Images" default_order="sequence">
                <field name="id"/>
                <field name="name"/>
                <field name="image_1920"/>
                <field name="sequence" widget="handle"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="card oe_kanban_global_click p-0">
                            <div class="o_squared_image">
                                <img class="card-img-top" t-att-src="kanban_image('tda.product.image', 'image_1920', record.id.raw_value)" t-att-alt="record.name.value"/>
                            </div>
                            <div class="card-body p-0">
                                <h4 class="card-title p-2 m-0 bg-200">
                                    <small><field name="name"/></small>
                                </h4>
                            </div>
                            <!-- below 100 Kb: good -->
                            <t t-if="record.image_1920.raw_value.length &lt; 100*1000">
                                <t t-set="size_status" t-value="'text-bg-success'"/>
                                <t t-set="message">Acceptable file size</t>
                            </t>
                            <!-- below 1000 Kb: decent -->
                            <t t-elif="record.image_1920.raw_value.length &lt; 1000*1000">
                                <t t-set="size_status" t-value="'text-bg-warning'" />
                                <t t-set="message">Huge file size. The image should be optimized/reduced.</t>
                            </t>
                            <!-- above 1000 Kb: bad -->
                            <t t-else="1">
                                <t t-set="size_status" t-value="'text-bg-danger'"/>
                                <t t-set="message">Optimization required! Reduce the image size or increase your compression settings.</t>
                            </t>
                            <span t-attf-class="badge #{size_status} o_product_image_size" t-esc="record.image_1920.value" t-att-title="message"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="tda_product_form" model="ir.ui.view">
        <field name="name">tda_product_form</field>
        <field name="model">tda.product.product</field>
        <field name="arch" type="xml">
            <form string="Products">
                <sheet>
                    <group name="product_info" string="Product Info">
                        <group id="left_column">
                            <field name="name" string="Name"/>
                            <field name="name_url" string="Name url"/>
                            <field name="category_id" string="Category"/>
                            <field name="description" string="Description"/>
                        </group>
                        <group id="right_column">
                            <field name="is_price_contact" string="Contact for price" widget="boolean_toggle"/>
                            <field name="price" string="Price" attrs="{'invisible': [('is_price_contact', '=', True)]}"/>
                            <field name="discount_price" string="Discount price" attrs="{'invisible': [('is_price_contact', '=', True)]}"/>
                        </group>
                    </group>

                    <notebook>
                        <page name="product_images" string="Product Images">
                            <group name="product_template_images" string="Extra Product Media">
                                <field name="product_template_image_ids" class="o_website_sale_image_list" mode="kanban" add-label="Add a Media" nolabel="1"/>
                            </group>
                        </page>

                        <page name="product_detail_html" string="Product Detail HTML">
                            <group name="product_detail_html" string="Product Detail HTML">
                                <field name="product_detail_html" string="Product detail html"/>
                            </group>
                        </page>

                        <page name="product_featured" string="Product Featured">
                            <group name="product_featured" string="Product Featured">
                                <field name="is_featured" string="Feature" widget="boolean_toggle"/>
                                <field name="image_featured_file_ids" class="o_website_sale_image_list" mode="kanban" add-label="Add a Media" nolabel="1" attrs="{'invisible': [('is_featured', '=', False)]}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tda_product_search" model="ir.ui.view">
        <field name="name">tda_product_search</field>
        <field name="model">tda.product.product</field>
        <field name="arch" type="xml">
            <search string="Products">
                <group expand="0" string="Group By">
                    <filter name="category_id" context="{'group_by':'category_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="tda_product_action" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tda.product.product</field>
        <field name="search_view_id" ref="tda_product_search"/>
        <field name="context">{'search_default_category_id': 1}</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="tda_product_category_form" model="ir.ui.view">
        <field name="name">tda_product_category_form</field>
        <field name="model">tda.product.category</field>
        <field name="arch" type="xml">
            <form string="Products Category">
                <sheet>
                    <group name="category_info" string="Category Info">
                        <field name="name" string="Name"/>
                        <field name="name_url" string="Name url"/>
                        <field name="parent_id" string="Parent"/>
                    </group>
                    <notebook>
                        <page name='products' string="Products">
                            <field name="product_ids" string="Images" readonly="1">
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tda_product_category_tree" model="ir.ui.view">
            <field name="name">tda_product_category_tree</field>
            <field name="model">tda.product.category</field>
            <field name="arch" type="xml">
                <tree string="Products Category">
                    <field name="name" string="Name"/>
                    <field name="parent_id" string="Parent"/>
                </tree>
            </field>
        </record>

    <record id="tda_product_category_action" model="ir.actions.act_window">
        <field name="name">Products Category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tda.product.category</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>