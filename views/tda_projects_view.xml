<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tda_projects_form" model="ir.ui.view">
        <field name="name">tda_projects_form</field>
        <field name="model">tda.projects</field>
        <field name="arch" type="xml">
            <form string="Projects">
                <sheet>
                    <group name="projects" string="Projects">
                        <field name="name" string="Name"/>
                        <field name="category_id" string="Category"/>
                    </group>

                    <notebook>
                        <page name="project_detail_html" string="Detail project">
                            <group name="project_detail_html">
                                <field name="project_detail_html"/>
                            </group>
                        </page>

                        <page name="project_image" string="Project Image">
                            <group name="project_image">
                                <field name="image" widget="image" string="Project Image"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tda_projects_tree" model="ir.ui.view">
        <field name="name">tda_projects_tree</field>
        <field name="model">tda.projects</field>
        <field name="arch" type="xml">
            <tree string="Projects">
                <field name="name" string="Name"/>
                <field name="category_id" string="Category"/>
            </tree>
        </field>
    </record>

    <record id="tda_projects_search" model="ir.ui.view">
        <field name="name">tda_projects_search</field>
        <field name="model">tda.projects</field>
        <field name="arch" type="xml">
            <search string="Projects">
                <group expand="1" string="Group By">
                    <filter name="category_id" context="{'group_by':'category_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="tda_projects_action" model="ir.actions.act_window">
        <field name="name">Projects</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tda.projects</field>
        <field name="search_view_id" ref="tda_projects_search"/>
        <field name="context">{'search_default_category_id': 1}</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>