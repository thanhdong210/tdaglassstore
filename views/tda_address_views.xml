<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tda_address_form" model="ir.ui.view">
        <field name="name">tda_address_form</field>
        <field name="model">tda.address</field>
        <field name="arch" type="xml">
            <form string="Addresses">
                <sheet>
                    <group>
                        <field name="name" string="Name"/>
                        <field name="address" string="Address"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tda_address_tree" model="ir.ui.view">
        <field name="name">tda_address_tree</field>
        <field name="model">tda.address</field>
        <field name="arch" type="xml">
            <tree string="Addresses">
                <field name="name" string="Name"/>
                <field name="address" string="Address"/>
            </tree>
        </field>
    </record>

    <record id="tda_address_action" model="ir.actions.act_window">
        <field name="name">Address</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tda.address</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>